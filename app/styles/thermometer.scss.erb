#funding_widget {
  position: relative; 
  width: 167px; 
  height: 323px;
  line-height: 2em;
  img {
    position: absolute;
    top: 0;
    z-index: 2;
  }
}
#funding_widget_header {
  font-family:  arial, helvetica, sans-serif;
  font-size: 28px;
  font-weight: bold;
  text-transform: uppercase;
  position: absolute;
  right: 0;
  top: 55px;
  z-index: 9999;
  width: 65px;
}

#funding_widget_goal {
  position: absolute;
  top: 18px;
  right: 0;
  font-family: arial, helvetica, sans-serif;
  font-size: 14px;
  z-index: 3;
}
#red_bar {
  background-color: #ef457a;
  position: absolute;
  bottom: 55px; width: 100px;
  z-index: 1;
}
